{
  "name": "CalculaChien",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/Dixeet/calculateur-chien",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dixeet/calculateur-chien.git"
  },
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "nuxt prepare",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.5.1",
    "nuxt": "3.0.0-rc.11",
    "prettier": "2.7.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.0",
    "sass": "^1.55.0",
    "vite-plugin-vuetify": "^1.0.0-alpha.17",
    "vuetify": "^3.0.0-beta.11"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "error",
      "no-undef": "warn"
    },
    "overrides": [
      {
        "files": [
          "pages/**/*.vue",
          "layouts/**/*.vue",
          "components/*/**/*.vue"
        ],
        "rules": {
          "vue/multi-word-component-names": [
            "off"
          ]
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "endOfLine": "auto",
    "bracketSameLine": true,
    "vueIndentScriptAndStyle": true
  }
}
