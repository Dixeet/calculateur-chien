{
  "name": "app-pour-mouaf",
  "description": "L'application compagnon pour chien",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/Dixeet/calculateur-chien",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dixeet/calculateur-chien.git"
  },
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "nuxt prepare",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.5.1",
    "nuxt": "3.0.0-rc.11",
    "prettier": "2.7.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.0",
    "sass": "^1.55.0",
    "vite-plugin-vuetify": "^1.0.0-alpha.17",
    "vuetify": "^3.0.0-beta.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "es2022": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:vue/vue3-recommended",
      "prettier"
    ],
    "plugins": ["@typescript-eslint"],
    "rules": {
      "no-console": "error"
    },
    "overrides": [
      {
        "files": [
          "pages/**/*.vue",
          "layouts/**/*.vue",
          "components/*/**/*.vue"
        ],
        "rules": {
          "vue/multi-word-component-names": [
            "off"
          ]
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "endOfLine": "auto",
    "bracketSameLine": true,
    "vueIndentScriptAndStyle": true
  }
}
